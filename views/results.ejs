<% include ./partials/header %>

<div class="container" id="searchResults">
    <h1>Results page</h1>
    
    <% if(data["Search"]){ %>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <% for(var i = 1; i < data["Search"].length; i ++){ %>
                    <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
                <% } %>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block " src= <%= data["Search"][0]["Poster"] %>>
                    <div class="carousel-caption">
                        <h5 class=" strokeme"><Strong><%= data["Search"][0]["Title"] %></Strong> - <%= data["Search"][0]["Year"] %></h5>
                        <a href="/results/<%=data["Search"][0]["imdbID"]%>" class="btn btn-danger btn-sm">Read More!</a>
                    </div>
                </div>
                <% for(var i = 1; i < data["Search"].length; i++){ %>
                    <div class="carousel-item">
                        <img class="d-block " src= <%= data["Search"][i]["Poster"] %>>
                        <div class="carousel-caption">
                        <h5 class=" strokeme"><Strong><%= data["Search"][i]["Title"] %></Strong> - <%= data["Search"][i]["Year"] %></h5>
                        <a href="/results/<%=data["Search"][i]["imdbID"]%>" class="btn btn-danger btn-sm">Read More!</a>
                        </div>
                    </div>
                <% } %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    <% } else { %>
        <h3>Movie not found</h3>
    <% } %>
    
    
    <a href="/">Search Again!</a>
</div>


<% include ./partials/footer %>